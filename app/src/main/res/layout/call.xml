<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:background="#ffffff"
    android:paddingTop="5sp"
    android:paddingBottom="5sp"
    android:layout_margin="2dp">
    
     <ImageView android:layout_width="25sp" 
         android:layout_height="20sp"
         android:src="@drawable/callcontactperson"
         android:layout_marginLeft="5dp"
         android:layout_gravity="center_vertical"
         android:gravity="center_vertical"/>

    <TextView android:id="@+id/tvcallname"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:text="Sagar Patil"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_weight="2"
        android:paddingLeft="5sp"
        android:paddingTop="3sp"
        android:fontFamily="@string/fontfamily"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"></TextView>

      <TextView android:id="@+id/tvcallno"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:text="9809809099"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_weight="2"
         android:paddingTop="3sp"
        android:paddingRight="5sp"
          android:fontFamily="@string/fontfamily"
          android:layout_gravity="center_vertical|right"
          android:gravity="center_vertical|right"></TextView>
    
</LinearLayout>
