<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="2dp"
    card_view:cardElevation="0.5dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true"
    tools:context="com.adapters.DT_StationList_Adapter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="#ededed">

        <LinearLayout
            android:id="@+id/lynwname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtnwametitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="Network Code :"
                android:textColor="#111"
                android:textSize="15dp"
                android:textStyle="bold"
                android:fontFamily="@string/fontfamily"/>

            <TextView
                android:id="@+id/txtntwrkname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="4"
                android:text=""
                android:textColor="#111"
                android:textSize="15dp"
                android:fontFamily="@string/fontfamily"/>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="#B6B6B4"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/lyname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:padding="2dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtsnametitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="Station Name :"
                android:textColor="#111"
                android:textSize="15dp"
                android:textStyle="bold"
                android:fontFamily="@string/fontfamily"/>

            <TextView
                android:id="@+id/txtstationname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="4"
                android:text=""
                android:textColor="#111"
                android:textSize="15dp"
                android:fontFamily="@string/fontfamily"/>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="#B6B6B4"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/lydate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:padding="2dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtdatetitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:text="Added Date :"
                android:textColor="#111"
                android:textSize="15dp"
                android:textStyle="bold"
                android:fontFamily="@string/fontfamily"/>

            <!--<TextView
                android:id="@+id/txtaddeddate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Added Date"
                android:textColor="#111"
                android:textSize="15dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="4"/>-->

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="#B6B6B4"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/lydowntime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:padding="2dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtdowntimetitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="Down Time :"
                android:textColor="#111"
                android:textSize="15dp"
                android:textStyle="bold"
                android:fontFamily="@string/fontfamily"/>

            <!--<TextView
                android:id="@+id/txtdowntime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="4"
                android:text="Down Time"
                android:textColor="#111"
                android:textSize="15dp" />-->

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="#B6B6B4"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/lystarttime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:padding="2dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtstarttimetitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="Start Time :"
                android:textColor="#111"
                android:textSize="15dp"
                android:textStyle="bold"
                android:fontFamily="@string/fontfamily"/>

            <!--<TextView
                android:id="@+id/txtstarttime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Time"
                android:textColor="#111"
                android:textSize="15dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="4"/>-->

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="#B6B6B4"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/lyendtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:padding="2dp">

            <!-- <TextView
                android:id="@+id/txtendtimetitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="End Time :"
                android:textColor="#111"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_weight="6"/>-->

            <TextView
                android:id="@+id/txtaddeddate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="1dp"
                android:layout_weight="4.20"
                android:gravity="center"
                android:text="Added Date"
                android:textColor="#111"
                android:textSize="13sp"
                android:fontFamily="@string/fontfamily"/>

            <TextView
                android:id="@+id/txtdowntime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_weight="4.20"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Down Time"
                android:textColor="#FE2E2E"
                android:textSize="13sp"
                android:fontFamily="@string/fontfamily"/>

            <TextView
                android:id="@+id/txtstarttime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_weight="4.30"
                android:gravity="center"
                android:text="Start Time"
                android:textColor="#111"
                android:textSize="13sp"
                android:fontFamily="@string/fontfamily"/>

            <TextView
                android:id="@+id/txtendtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:layout_weight="4.30"
                android:gravity="center"
                android:text="End Time"
                android:textColor="#111"
                android:textSize="13sp"
                android:fontFamily="@string/fontfamily"/>

        </LinearLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="#B6B6B4"
            android:visibility="gone" />

    </LinearLayout>

</android.support.v7.widget.CardView>