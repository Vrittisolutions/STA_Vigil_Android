<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/newborder"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/headerColor"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:background="#0b6bb7" 
        android:orientation="horizontal">

            <ImageView
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:background="@android:color/transparent"
                android:src="@drawable/sta_logo"
                android:layout_marginTop="3sp"
                android:layout_marginLeft="5sp" 
                android:id="@+id/siv"  />

            <TextView
                android:id="@+id/vWB"
                android:layout_width="0sp"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:text="@string/app_name"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="normal"
                android:paddingLeft="5sp"
                android:fontFamily="@string/fontfamily"
                android:gravity="center_vertical"
                android:layout_toRightOf="@id/siv"
                android:layout_gravity="center_vertical"
                >
            </TextView>


        <ImageView
            android:id="@+id/button_alert_add"
            android:layout_width="50sp"
            android:layout_height="40sp"
            android:padding="5dp"
            android:visibility="gone"
            android:background="@android:color/transparent"
            android:src="@drawable/plusaddicon" >
        </ImageView>

        <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="60sp"
        android:layout_height="40sp"
          android:visibility="gone" />

        <ImageView
            android:id="@+id/button_filter"
            android:layout_width="60sp"
            android:layout_height="40sp"
            android:background="@android:color/transparent"
            android:onClick="FilterClick"
            android:src="@drawable/btnfilter"></ImageView>

        <ImageView
                android:id="@+id/button_refresh_connection_main"
                android:layout_width="60sp"
                android:layout_height="40sp"
                android:background="@android:color/transparent"
                android:src="@drawable/btnrefreshborder" 
               >
            </ImageView>
           
    </LinearLayout>
    
    <EditText android:id="@+id/edfitertext"
        android:layout_width="fill_parent"
        android:layout_height="30sp"
        android:layout_marginLeft="5sp"
        android:paddingLeft="10sp"
        android:layout_marginRight="5sp"
        android:background="@drawable/edback"  
        android:hint="Search here..." 
        android:textColor="#000000"
        android:visibility="gone"
        android:fontFamily="@string/fontfamily"/>
    	
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#81DAF5"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:orientation="vertical" >
      
                <TextView
                    android:id="@+id/onactivitynamereassign"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginLeft="10dp"
                    android:text="Connection Status"
                    android:textColor="#000000"
                      android:textStyle="bold"
                    android:textSize="15sp"
                    android:padding="3dp"
                    android:fontFamily="@string/fontfamily"
                   />

               
       
    </LinearLayout>

   <!-- <ListView
        android:id="@+id/connectionstatusdetailmain"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginTop="10sp"
        android:cacheColorHint="#000000"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:scrollingCache="false"></ListView>-->
    <GridView
        android:id="@+id/connectionstatusdetailmain"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginTop="10sp"
        android:cacheColorHint="#000000"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:scrollingCache="false"
        android:numColumns="2"></GridView>

</LinearLayout>