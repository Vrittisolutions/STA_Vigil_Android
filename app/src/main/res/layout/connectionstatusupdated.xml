<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardBackgroundColor="@android:color/transparent"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    card_view:cardElevation="0.5dp"
    card_view:cardCornerRadius="0dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" >

            <TextView
                android:id="@+id/tvservertime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="ServerTime"
                android:textColor="#000000"
                android:textSize="14dp"

                android:fontFamily="@string/fontfamily" />

                  <TextView
                android:id="@+id/tvdatedaycsn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="1dp"
                android:text="Dayname"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textStyle="bold"
                android:fontFamily="@string/fontfamily" />
            
            <TextView
                android:id="@+id/tvstarttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="1dp"
                android:text="StartTime"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="14dp"

                android:fontFamily="@string/fontfamily" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
             android:layout_marginLeft="10dp" android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/tvtyiff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="Time Diff.:"
                android:textColor="#726E6D"
                android:textSize="14dp"
                android:fontFamily="@string/fontfamily" />

            <TextView
                android:id="@+id/tvtymdiff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:text="No Info"
                android:textColor="#FE2E2E"
                android:textSize="14dp"

                android:fontFamily="@string/fontfamily" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
             android:layout_marginLeft="10dp" android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/tvworkspacewisdaptertassigned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
           
                android:layout_marginTop="1dp"
                android:text="Last 7 Days performance:"
                android:textColor="#726E6D"
                android:textSize="14dp"
                android:fontFamily="@string/fontfamily" />

            <TextView
                android:id="@+id/tvworkspacewiseadaptertassigned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:text="No Info"
                android:textColor="#000000"
                android:textSize="14dp"
                android:fontFamily="@string/fontfamily" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
             android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
            

              <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/quick_heal"
                android:layout_gravity="center_vertical"/>
              
              <TextView
                android:id="@+id/tvqhatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:text="Updated"
                android:textColor="#726E6D"
                android:textSize="14dp"

                  android:fontFamily="@string/fontfamily" />

            <TextView
                android:id="@+id/tvqhstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:text="No Info"
                android:textColor="#000000"
                android:textSize="14dp"
                android:fontFamily="@string/fontfamily" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
             android:layout_marginLeft="10dp" android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/tvversin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              
                android:layout_marginTop="1dp"
                android:text="Current Version:"
                android:textColor="#726E6D"
                android:textSize="14dp"
                android:fontFamily="@string/fontfamily" />

            <TextView                
                android:id="@+id/tvversion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="1dp"
                android:text="Version"
                android:textColor="#000000"
                android:textSize="14dp"
                android:fontFamily="@string/fontfamily" />
        </LinearLayout>
        
         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
             android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
            
             <TextView
                android:id="@+id/tvversin1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="IP Address :"
                android:textColor="#726E6D"
                android:textSize="14dp"
                 android:fontFamily="@string/fontfamily" />

            <TextView
                android:id="@+id/tvremarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              android:layout_marginLeft="29dp"
                android:layout_marginTop="1dp"
                android:text="IP Address"
                android:textColor="#000000"
                android:textSize="14dp"
                android:fontFamily="@string/fontfamily" />
             </LinearLayout>
             
          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
             android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:orientation="horizontal">
            
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/arrownewright"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tvcsnreason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="No reason updated"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:textSize="14dp"
                android:fontFamily="@string/fontfamily" />
             </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="3dp"
            android:background="#B6B6B4"
            android:visibility="gone"/>

  </LinearLayout>

</android.support.v7.widget.CardView>