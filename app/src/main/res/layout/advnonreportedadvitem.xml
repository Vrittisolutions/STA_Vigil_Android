<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    card_view:cardElevation="0.5dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:paddingRight="5dp"
        android:paddingBottom="1dp"
        android:background="@drawable/listitemselector"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:id="@+id/tvadname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="adv desc"
                android:textColor="#0D47A1"
                android:textSize="13sp"
                android:textStyle="bold"
                android:fontFamily="@string/fontfamily" />

            <TextView
                android:id="@+id/tvstationname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tvadname" 
                android:layout_alignBottom="@+id/tvadname"
                android:layout_alignParentRight="true"                
                android:layout_toRightOf="@+id/tvadname"                            
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:text="adv"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="@string/fontfamily"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tvtotalcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tvadname"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="0dp"
                android:fontFamily="@string/fontfamily"
                android:text="00"
                android:textColor="#00AA00"
                android:textSize="13sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" >

            <TextView
                android:id="@+id/tvworkspacewisename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Released On:"
                android:textColor="#000000"
                android:textSize="13sp"
                android:fontFamily="@string/fontfamily" />

            <TextView
                android:id="@+id/tvnoncounnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tvworkspacewisename"
                android:layout_alignBottom="@+id/tvworkspacewisename"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@string/fontfamily"
                android:text="00"
                android:textColor="#ff0000"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvnonDatefrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tvworkspacewisename"
                android:layout_alignBottom="@+id/tvworkspacewisename"
                android:layout_marginLeft="26dp"
                android:layout_toRightOf="@+id/tvworkspacewisename"
                android:text="No"
                android:textColor="#000000"
                android:textSize="13sp"
                android:fontFamily="@string/fontfamily" />

            <TextView
                android:id="@+id/tvnontimefrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tvnonDatefrom"
                android:layout_toRightOf="@+id/tvnonDatefrom"
                android:layout_centerHorizontal="true"
                android:text="No"
                android:layout_marginLeft="8dp"
                android:textColor="#000000"
                android:textSize="13sp"
                android:fontFamily="@string/fontfamily" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" >

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:background="#B6B6B4"
            android:visibility="gone"/>
    </LinearLayout>

</android.support.v7.widget.CardView>