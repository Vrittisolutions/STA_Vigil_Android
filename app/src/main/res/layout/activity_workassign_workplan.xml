<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/newborder"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:background="#0b6bb7"
        android:orientation="horizontal" >
        
          <ImageView
            android:id="@+id/siv1"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="3sp"
            android:background="@android:color/transparent"
            android:src="@drawable/sta_logo" />

        <TextView
            android:id="@+id/vWB"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/siv"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5sp"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="normal"
            android:fontFamily="@string/fontfamily" >
        </TextView>

        <ProgressBar
            android:id="@+id/progressinvent1"
            android:layout_width="50sp"
            android:layout_height="40sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/button_refresh_alert"
            android:layout_width="50sp"
            android:layout_height="40sp"
            android:background="@android:color/transparent"
            android:src="@drawable/btnrefresh" >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:padding="8dp"
        android:background="#81DAF5"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvheader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:text="Activity"
            android:textColor="#000000"
            android:textSize="14dp"
            android:textStyle="bold"
            android:fontFamily="@string/fontfamily"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:background="#B6B6B4"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="0dp">

                <LinearLayout
                    android:id="@+id/actstnwise"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="leave"
                    android:orientation="vertical"
                    android:elevation="0dp"
                    android:layout_weight="5"
                    android:layout_margin="5dp"
                    android:background="@drawable/listitemselector">
                    <!--android:weightSum="1"
                    android:layout_margin="5dp"-->
                    <!--   android:padding="3dp"-->
                    <!--android:background="@drawable/cardlayout2_border"-->

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_weight="1"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:src="@drawable/stationwise_white"/>
                    <!-- android:src="@drawable/dmcerfct_station"-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:background="#dcdcdc"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:padding="3dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvstnwise"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Stations wise"
                            android:textColor="#726E6D"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="14dp"
                            android:layout_weight="3"
                            android:textStyle="bold"
                            android:fontFamily="@string/fontfamily"/>

                        <TextView
                            android:id="@+id/tvpendingstncount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_weight="7"
                            android:textColor="#ff4c4c"
                            android:textSize="16dp"
                            android:layout_marginRight="5dp"
                            android:textStyle="bold"
                            android:layout_gravity="center|right"
                            android:gravity="center|right"
                            android:visibility="gone"
                            android:fontFamily="@string/fontfamily"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvstncount"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.1"
                        android:gravity="center_horizontal"
                        android:text="0"
                        android:textColor="#FE2E2E"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:fontFamily="@string/fontfamily"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/actsonowise"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:onClick="leave"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:elevation="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="5"
                    android:background="@drawable/listitemselector">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_weight="1"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:src="@drawable/supp"/>
                    <!--android:src="@drawable/sowise_1"-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="#dcdcdc"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvsonowise"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:text="SO No. wise"
                            android:textColor="#726E6D"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="14dp"
                            android:layout_weight="3"
                            android:textStyle="bold"
                            android:fontFamily="@string/fontfamily"/>

                        <TextView
                            android:id="@+id/tvpendingsocount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textStyle="bold"
                            android:layout_marginRight="5dp"
                            android:textColor="#ff4c4c"
                            android:textSize="14dp"
                            android:layout_weight="7"
                            android:layout_gravity="center|right"
                            android:gravity="center|right"
                            android:visibility="gone"
                            android:fontFamily="@string/fontfamily"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvsonocount"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.1"
                        android:gravity="center_horizontal"
                        android:text="0"
                        android:textColor="#FE2E2E"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:fontFamily="@string/fontfamily"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/wrkassnplan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="leave"
                    android:orientation="vertical"
                    android:layout_weight="5"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/listitemselector">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:paddingTop="3dp"
                        android:src="@drawable/workplan_1"/>
                    <!--android:src="@drawable/wrkplan"-->

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:background="#dcdcdc"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/txtwrkassn"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:text="Work Plan"
                            android:textColor="#726E6D"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="14dp"
                            android:layout_weight="3"
                            android:textStyle="bold"
                            android:fontFamily="@string/fontfamily"/>

                        <TextView
                            android:id="@+id/txtwrkassncount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textStyle="bold"
                            android:layout_marginRight="5dp"
                            android:textColor="#ff4c4c"
                            android:textSize="14dp"
                            android:layout_weight="7"
                            android:layout_gravity="center|right"
                            android:gravity="center|right"
                            android:visibility="gone"
                            android:fontFamily="@string/fontfamily"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvwrkassncount"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.1"
                        android:gravity="center_horizontal"
                        android:text="0"
                        android:textColor="#FE2E2E"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:fontFamily="@string/fontfamily"/>

                </LinearLayout>

        </LinearLayout>

            </LinearLayout>

        <!--workplan-->
        <LinearLayout
            android:id="@+id/lay_wrkplanoptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:padding="15dp">

            <Button
                android:id="@+id/btn_wrkplnstnwise"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                style="@android:style/ButtonBar"
                android:background="@drawable/edittext_border"
                android:layout_margin="5dp"
                android:text="Work Station wise"
                android:textColor="#111"
                android:textSize="15dp"
                android:textAllCaps="false"
                android:layout_weight="5"
                android:fontFamily="@string/fontfamily" />

            <Button
                android:id="@+id/btn_wrkplnsowise"
                style="@android:style/ButtonBar"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:layout_weight="5"
                android:background="@drawable/edittext_border"
                android:text="Work Supporter wise"
                android:textAllCaps="false"
                android:textColor="#111"
                android:textSize="15dp"
                android:fontFamily="@string/fontfamily"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/lay2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="0dp">

                <LinearLayout
                    android:id="@+id/actsewise"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:onClick="leave"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:elevation="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="5"
                    android:background="@drawable/listitemselector">
                    <!--android:background="@drawable/listitemselector"-->

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:src="@drawable/sewise2"/>
                    <!--android:src="@drawable/sowise_1"-->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:onClick="leave"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:elevation="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="5"
                    android:background="@drawable/listitemselector"
                    android:visibility="invisible">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_weight="1"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:src="@drawable/supp"/>
                    <!--android:src="@drawable/sowise_1"-->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:onClick="leave"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:elevation="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="5"
                    android:background="@drawable/listitemselector"
                    android:visibility="invisible">
                    <!--android:background="@drawable/listitemselector"-->

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_weight="1"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:src="@drawable/supp"/>
                    <!--android:src="@drawable/sowise_1"-->

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    <!--<EditText android:id="@+id/edfitertext"
        android:layout_width="fill_parent"
        android:layout_height="30sp"
        android:layout_marginLeft="5sp"
        android:paddingLeft="5dp"
        android:layout_marginRight="5sp"
        android:background="@drawable/edback"
        android:hint="Search here..."
        android:textColor="#000000"
        android:visibility="gone" />-->

    </LinearLayout>

</LinearLayout>
