<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/newborder"
    tools:context=".SEAssignActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:background="#0b6bb7"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/siv1"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="3sp"
            android:background="@android:color/transparent"
            android:src="@drawable/sta_logo" />

        <TextView
            android:id="@+id/vWB"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/siv"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5sp"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="normal"
            android:fontFamily="@string/fontfamily" >
        </TextView>

        <ImageView
            android:id="@+id/button_invent_delete"
            android:layout_width="60sp"
            android:layout_height="40sp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_menu_delete"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/progressinvent"
            android:layout_width="60sp"
            android:layout_height="40sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/button_refresh_invent"
            android:layout_width="60sp"
            android:layout_height="40sp"
            android:background="@android:color/transparent"
            android:src="@drawable/btnrefresh"
            android:visibility="gone">
        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:background="#81DAF5"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/stationInvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Assign Work"
            android:textColor="#000000"
            android:textSize="14dp"
            android:textStyle="bold"
            android:fontFamily="@string/fontfamily" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:background="#ededed"
        android:padding="5dp"
        android:layout_margin="5dp">
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <AutoCompleteTextView
                    android:id="@+id/edt_tlname"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittext_border"
                    android:gravity="left|center"
                    android:hint="Team Leader Name"
                    android:inputType="text"
                    android:textColor="#000"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:fontFamily="@string/fontfamily"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.5"
                        android:text="Start Date"
                        android:visibility="visible"
                        android:textSize="15dp"
                        android:textColor="#111"
                        android:fontFamily="@string/fontfamily"/>

                    <Button
                        android:id="@+id/ed_startdate"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:background="@drawable/edittext_border"
                        android:hint=""
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:fontFamily="@string/fontfamily"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.5"
                        android:text="End Date"
                        android:visibility="visible"
                        android:textSize="15dp"
                        android:textColor="#111"
                        android:fontFamily="@string/fontfamily"/>

                    <Button
                        android:id="@+id/ed_enddate"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:background="@drawable/edittext_border"
                        android:hint=""
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:fontFamily="@string/fontfamily"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.5"
                        android:text="Advertisement Count"
                        android:visibility="visible"
                        android:textSize="15dp"
                        android:textColor="#111"
                        android:fontFamily="@string/fontfamily"/>

                    <EditText
                        android:id="@+id/edt_count"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:background="@drawable/edittext_border"
                        android:hint="Enter count here"
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:inputType="number"
                        android:fontFamily="@string/fontfamily"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/edt_advname"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edittext_border"
                    android:fontFamily="@string/fontfamily"
                    android:gravity="left|center"
                    android:hint="Advertisement Code and Desc"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLength="2000"
                    android:maxLines="5"
                    android:minLines="1"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="15dp">

                </EditText>

                <EditText
                    android:id="@+id/edtremark"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittext_border"
                    android:gravity="left|center"
                    android:hint="Remark"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLength="2000"
                    android:maxLines="4"
                    android:minLines="1"
                    android:textColor="#000"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:fontFamily="@string/fontfamily"/>

                <TextView
                    android:id="@+id/txtactivitydesc"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="left|center"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLength="2000"
                    android:maxLines="4"
                    android:minLines="1"
                    android:textColor="#000"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:visibility="gone"
                    android:fontFamily="@string/fontfamily"/>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button_save"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/btn_pressed_glossy"
                android:fontFamily="@string/fontfamily"
                android:text="Assign"
                android:textStyle="bold"
                android:visibility="visible"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/button_cancel"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/btn_pressed_glossy"
                android:fontFamily="@string/fontfamily"
                android:text="Cancel"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:visibility="visible"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>