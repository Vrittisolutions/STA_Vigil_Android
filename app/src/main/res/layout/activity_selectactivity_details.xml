<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/newborder"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/headerColor"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:background="#0b6bb7"
        android:gravity="top"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/headerColorrr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.7"
            android:orientation="horizontal" >

             <ImageView
            android:id="@+id/siv"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="3sp"
            android:background="@android:color/transparent"
            android:src="@drawable/sta_logo" />

        <TextView
            android:id="@+id/vWB"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/siv"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5sp"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="normal"
            android:fontFamily="@string/fontfamily" >
        </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/headerColorr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.3"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/button_refresh"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="refreshactivity"
                android:paddingLeft="0dp"
                android:src="@drawable/refresh_final"
                android:visibility="invisible" >
            </ImageView>

            <ImageView
                android:id="@+id/button_menu"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="menu"
                android:paddingRight="5dp"
                android:src="@drawable/menu"
                android:visibility="invisible" >
            </ImageView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerColor"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textview_selected_activity_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Management.."
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:fontFamily="@string/fontfamily" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll2"
        android:layout_marginLeft="5dp"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/listview_selected_activity_activitieslist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#000000"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:scrollingCache="false" />
    </LinearLayout>

    <View
        android:id="@+id/ll4"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll3"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:background="#B6B6B4" />

    <LinearLayout
        android:id="@+id/ll5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll4"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txttextstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status :"
                android:textColor="#000000"
                android:textSize="14dp"
                android:fontFamily="@string/fontfamily" />

            <TextView
                android:id="@+id/txtstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status : "
                android:textColor="#000000"
                android:textSize="14dp"
                android:fontFamily="@string/fontfamily" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txttextprojectgroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Group : "
                android:textColor="#000000"
                android:textSize="14dp"
                android:fontFamily="@string/fontfamily" />

            <TextView
                android:id="@+id/txtprojectgroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Group : "
                android:textColor="#000000"
                android:textSize="14dp"
                android:fontFamily="@string/fontfamily"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txttextassignedby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assigned by : "
                android:textColor="#000000"
                android:textSize="14dp"
                android:fontFamily="@string/fontfamily" />

            <TextView
                android:id="@+id/txtassignedby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assigned by : "
                android:textColor="#000000"
                android:textSize="14dp"
                android:fontFamily="@string/fontfamily" />
        </LinearLayout>
    </LinearLayout>

    <!-- android:id="@+id/linearlayout_selected_activity_bottom_buttons" -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_pressed_glossy"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0sp"
            android:layout_height="47sp"
            android:layout_weight="1"
            android:background="@drawable/btn_pressed_glossy"
            android:clickable="true"
            android:onClick="ShareActivityClick" >

            <ImageView
                android:id="@+id/button_whatsapp"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2sp"
                android:background="@android:color/transparent"
                android:src="@drawable/btnwhatsapp" >
            </ImageView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_whatsapp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Share with"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:fontFamily="@string/fontfamily"/>
        </RelativeLayout>

