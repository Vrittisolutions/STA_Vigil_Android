<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.adapters.StaVisitForm_Adapter"
    android:background="#ededed">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp">

        <LinearLayout
            android:id="@+id/layquestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            android:padding="3dp"
            android:visibility="visible"
            android:layout_weight="3.5"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtquesid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="Ques Id :"
                android:textColor="#111"
                android:textSize="13dp"
                android:textStyle="bold"
                android:visibility="gone"
                android:fontFamily="@string/fontfamily"/>

            <TextView
                android:id="@+id/txtquestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:maxLines="5"
                android:text="Question"
                android:textColor="#111"
                android:textSize="13dp"
                android:fontFamily="@string/fontfamily" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="#B6B6B4"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/layresp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:padding="2dp"
            android:visibility="visible"
            android:layout_weight="6.5"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtresptype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Response type :"
                android:textColor="#111"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="gone"
                android:fontFamily="@string/fontfamily"/>

            <EditText
                android:id="@+id/txt_edtselection"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="5"
                android:background="@drawable/edittext_border"
                android:hint="Enter answer"
                android:padding="7dp"
                android:textColor="@color/answercolor"
                android:textSize="13dp"
                android:fontFamily="@string/fontfamily"
                android:visibility="visible"/>

            <EditText
                android:id="@+id/edttxtselection"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="5"
                android:background="@drawable/edittext_border"
                android:fontFamily="@string/fontfamily"
                android:hint="Enter answer"
                android:padding="7dp"
                android:textColor="@color/answercolor"
                android:textSize="11.5dp"
                android:visibility="visible" />
            <!--android:inputType="phone"-->

            <Spinner
                android:id="@+id/spinner_yes_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_border"
                android:layout_marginLeft="3dp"
                android:layout_weight="5"
                android:textColor="@color/answercolor"
                android:padding="5dp"
                android:spinnerMode="dropdown"
                android:textSize="10dp"
                android:visibility="visible"></Spinner>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>