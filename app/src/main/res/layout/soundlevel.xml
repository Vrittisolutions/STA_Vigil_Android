<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/newborder"
    android:orientation="vertical" >

     <LinearLayout
        android:id="@+id/headerColor"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:background="#0b6bb7"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/siv"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="3sp"
            android:background="@android:color/transparent"
            android:src="@drawable/sta_logo" />

        <TextView
            android:id="@+id/vWB"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/siv"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:fontFamily="@string/fontfamily" >
        </TextView>

         <ImageView
             android:id="@+id/button_alert_add"
             android:layout_width="50sp"
             android:layout_height="40sp"
             android:visibility="gone"
             android:padding="5dp"
             android:background="@android:color/transparent"
             android:src="@drawable/plusaddicon" >
         </ImageView>

         <ImageView
            android:id="@+id/button_calibrationStnd"
            android:layout_width="60sp"
            android:layout_height="30sp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:src="@drawable/addicon" >
        </ImageView>

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="60sp"
            android:layout_height="40sp"
            android:visibility="gone" />
       

        <ImageView
            android:id="@+id/button_refresh_soundlevel"
            android:layout_width="60sp"
            android:layout_height="40sp"
            android:background="@android:color/transparent"
            android:src="@drawable/btnrefresh" >
        </ImageView>
    </LinearLayout>
 
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#81DAF5"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvsoundlevelssstnname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:text=" "
            android:textColor="#000000"
            android:textSize="14dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:fontFamily="@string/fontfamily"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:background="#B6B6B4" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layouttxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="Date"
            android:textColor="#fff"
            android:textSize="14dp"
            android:fontFamily="@string/fontfamily" />

        <TextView
            android:id="@+id/txttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.1"
            android:gravity="center"
            android:text="Time"
            android:textColor="#fff"
            android:textSize="14dp"
            android:fontFamily="@string/fontfamily" />

        <TextView
            android:id="@+id/txtstd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.1"
            android:gravity="center"
            android:text="Std"
            android:textColor="#fff"
            android:textSize="14dp"
            android:fontFamily="@string/fontfamily" />

        <TextView
            android:id="@+id/txtactual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="Act"
            android:textColor="#fff"
            android:textSize="14dp"
            android:fontFamily="@string/fontfamily"/>

        <TextView
            android:id="@+id/txtpercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="%"
            android:textColor="#fff"
            android:textSize="14dp"
            android:fontFamily="@string/fontfamily" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/lv_soundlevel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/txtload_earlierdata"
            android:layout_marginLeft="5sp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5sp"
            android:cacheColorHint="#000000"
            android:divider="#000000"
            android:scrollingCache="false" />

        <Button
            android:id="@+id/txtload_earlierdata"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_pressed_glossy"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Load earlier records"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textAllCaps="true"
            android:fontFamily="@string/fontfamily" />
    </RelativeLayout>

</LinearLayout>