<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/newborder"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:background="#0b6bb7"
        android:orientation="horizontal" >
       
            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="3sp"
                android:background="@android:color/transparent"
                android:src="@drawable/sta_logo" />

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="0sp"
                android:layout_height="40sp"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/siv"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="5sp"
                android:text="@string/app_name"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="normal"
                android:fontFamily="@string/fontfamily" />

            <ProgressBar
                android:id="@+id/progressBar_work"
                android:layout_width="60sp"
                android:layout_height="40sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/buttn_refresh_work_his"
                android:layout_width="60sp"
                android:layout_height="40sp"
                android:background="@android:color/transparent"
                android:src="@drawable/btnrefresh" >
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="#81DAF5"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/work_Station"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:text="Bus Reporting -"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textStyle="bold"
                android:fontFamily="@string/fontfamily"
                android:padding="5dp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:background="#B6B6B4"
                android:visibility="gone"/>

        </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_7_30_days_rprt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/busrprt_30days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bsrprt_30"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#ffffff"/>

        <ImageView
            android:id="@+id/busrprt_7days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bsrt_7"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#ffffff"/>
    </LinearLayout>

        <GridView
            android:id="@+id/worklist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#000000"
            android:scrollingCache="false"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:numColumns="2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom">

        <TextView
            android:id="@+id/txt_loadprevious"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Load previous..."
            android:layout_marginRight="10dp"
            android:textStyle="italic"
            android:textSize="15dp"
            android:layout_gravity="center|right"
            android:gravity="center|right"
            android:textColor="@color/buttoncolor"
            android:fontFamily="@string/fontfamily" />

    </LinearLayout>

 </LinearLayout>