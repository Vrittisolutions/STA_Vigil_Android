<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:layout_marginTop="10dp"
    android:orientation="vertical" >
    <!-- #81DAF5
    #9400D3 -->
    
    <LinearLayout 
        android:id="@+id/bubble_layout_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="26dp"        
    android:background="@drawable/outgoing_bubble"        
        android:orientation="vertical"        >
        
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:orientation="horizontal"        >

    <TextView
        android:id="@+id/txtcmntby_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:layout_marginRight="15dp"
        android:gravity="left"
        android:paddingLeft="0dp"
        android:text="12 Jan 2014"
        android:textColor="#fff"
        android:textStyle="bold|italic"
        android:fontFamily="@string/fontfamily"
        android:textSize="14dp" />
    
    <!-- #f9f93d  #F3E5F5 -->    
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutimg1_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            android:orientation="horizontal"
            android:weightSum="1" >

            <ImageView
                android:id="@+id/img1_out"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:gravity="center"
                android:layout_marginRight="7dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/sta_logo"
                 />
            <!--android:textColor="#000000"-->
        </LinearLayout>

    <LinearLayout
        android:id="@+id/layouttxt1_out"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:id="@+id/cmntDesc_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:text="Time"
            android:textColor="#fff"

            android:textSize="14dp"
            android:fontFamily="@string/fontfamily"/>
        <!--android:textColor="#000000"-->
            </LinearLayout>
            
    <LinearLayout
        android:id="@+id/layouttxt2_out"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="1" >

        <TextView
            android:id="@+id/cmntDT_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Time"
            android:textColor="#EEEEEE"
            android:textSize="12dp"
            android:textStyle="italic"
            android:fontFamily="@string/fontfamily" />
    </LinearLayout>
     </LinearLayout>     
    </LinearLayout>  
 
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvreasonupdated"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="#eeeeee" />

    <!-- #B6B6B4 -->
</LinearLayout>
