    android:background="@drawable/newborder"
    android:orientation="vertical" >
     <LinearLayout
        android:id="@+id/headerColor"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:background="#0b6bb7" 
        android:orientation="horizontal">

            <ImageView
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:background="@android:color/transparent"
                android:src="@drawable/sta_logo"
                android:layout_marginTop="3sp"
                android:layout_marginLeft="5sp" 
                android:id="@+id/siv"  />

            <TextView
                android:id="@+id/vWB"
                android:layout_width="0sp"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:text="@string/app_name"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="normal"
                android:paddingLeft="5sp"
                android:typeface="normal"
                android:fontFamily="@string/fontfamily"
                android:gravity="center_vertical"
                android:layout_toRightOf="@id/siv"
                android:layout_gravity="center_vertical"
                >
            </TextView>

         <ImageView
             android:id="@+id/button_alert_add"
             android:layout_width="50sp"
             android:layout_height="40sp"
             android:padding="5dp"
             android:visibility="gone"
             android:background="@android:color/transparent"
             android:src="@drawable/plusaddicon" >
         </ImageView>

			<ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="60sp"
        android:layout_height="40sp"
          android:visibility="gone" />

         <ImageView
                android:id="@+id/button_refresh_nonrepeated"
                android:layout_width="60sp"
                android:layout_height="40sp"
                android:background="@android:color/transparent"
                android:src="@drawable/btnrefresh" 
               >
            </ImageView>
           
    </LinearLayout>
