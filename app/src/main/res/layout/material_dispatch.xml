<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    card_view:cardBackgroundColor="@android:color/transparent"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="0dp"
    card_view:cardElevation="0dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtmaterial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:text="Material"
                android:textSize="13dp"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:fontFamily="@string/fontfamily"
                android:layout_gravity="left"
                android:gravity="left"
                android:layout_weight="0.45"/>

            <TextView
                android:id="@+id/txtstation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="10dp"
                android:text="Station"
                android:textSize="13dp"
                android:textColor="#000000"
                android:fontFamily="@string/fontfamily"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_weight="0.6"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:text="Rejected by"
                android:textSize="13dp"
                android:paddingRight="5dp"
                android:textColor="#111111"
                android:fontFamily="@string/fontfamily"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_weight="0.3"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/imgdispatch"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@drawable/dispatch"
                android:layout_weight="0.4"/>

            <View
                android:id="@+id/view1"
                android:layout_width="130dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/dottedline" />

            <ImageView
                android:id="@+id/imgack"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@drawable/acknowledge"
                android:layout_weight="0.4"/>

            <View
                android:id="@+id/view2"
                android:layout_width="120dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/dottedline"/>

            <ImageView
                android:id="@+id/imgrepair"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@drawable/repair_scrap"
                android:layout_weight="0.4"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/dispatch"
                android:layout_weight="0.5"
                android:text="Dispatch"
                android:textSize="9sp"
                android:paddingLeft="5dp"
                android:layout_gravity="left"
                android:gravity="left"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/acknowledge"
                android:layout_weight="0.5"
                android:text="Acknowledge"
                android:textSize="9sp"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/repair_scrap"
                android:layout_weight="0.5"
                android:paddingRight="5dp"
                android:textSize="9sp"
                android:text="Scrap/Repair"
                android:layout_gravity="right"
                android:gravity="right"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>