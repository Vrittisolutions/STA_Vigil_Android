<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    card_view:cardElevation="1dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="3dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvsounddate"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0.2"
            android:text="08 Nov"
            android:textColor="#000000"
            android:textSize="13sp"
            android:fontFamily="@string/fontfamily" />

        <TextView
            android:id="@+id/txtsoundtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:gravity="center"
           
            android:layout_marginTop="5dp"
            android:text="11:11"
            android:textColor="#000000"
            android:textSize="13sp"
            android:fontFamily="@string/fontfamily" />

        <TextView
            android:id="@+id/tvsoundstd"
            android:layout_width="@dimen/width"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0.2"
            android:text="No Info"
            android:gravity="center"
            android:layout_marginRight="2dp"
            android:textColor="#000000"
            android:textSize="13sp"
            android:fontFamily="@string/fontfamily" />

        <TextView
            android:id="@+id/tvsoundactual"
            android:layout_width="@dimen/width"
            android:layout_height="wrap_content"
               android:gravity="center"
           
            android:layout_marginTop="5dp"
            android:layout_weight="0.2"
            android:text="No info"
             android:layout_marginRight="2dp"
            android:textColor="#000000"
            android:textSize="13sp"
            android:fontFamily="@string/fontfamily" />

        <TextView
            android:id="@+id/tvsoundpercentage"
            android:layout_width="@dimen/width"
            android:layout_height="wrap_content"
              android:gravity="center"
           
            android:layout_marginTop="5dp"
            android:layout_weight="0.2"
            android:text="No Info"
            android:textColor="#000000"
            android:textSize="13sp"
            android:fontFamily="@string/fontfamily" />

        <!-- <TextView -->
        <!-- android:id="@+id/tvsoundper" -->
        <!-- android:layout_width="wrap_content" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_marginLeft="10dp" -->
        <!-- android:layout_marginTop="5dp" -->
        <!-- android:text="No Info" -->
        <!-- android:textColor="#000000" -->
        <!-- android:textSize="14dp" -->
        <!-- android:typeface="serif" /> -->
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp"
        android:background="#B6B6B4"
        android:visibility="gone"/>

</android.support.v7.widget.CardView>