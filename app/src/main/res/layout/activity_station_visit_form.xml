<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newborder"
    android:orientation="vertical"
    tools:context=".StationVisitForm">

    <LinearLayout
        android:id="@+id/headerColor"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:background="#0b6bb7"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/siv"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="3sp"
            android:background="@android:color/transparent"
            android:src="@drawable/sta_logo" />

        <TextView
            android:id="@+id/vWB"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/siv"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5sp"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="normal"
            android:fontFamily="@string/fontfamily" >
        </TextView>

        <ImageView
            android:id="@+id/button_filter"
            android:layout_width="60sp"
            android:layout_height="40sp"
            android:background="@android:color/transparent"
            android:src="@drawable/btnfilter"
            android:visibility="gone"
            >
        </ImageView>

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="60sp"
            android:layout_height="40sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/button_refresh_nonrepeated_main"
            android:layout_width="60sp"
            android:layout_height="40sp"
            android:background="@android:color/transparent"
            android:src="@drawable/btnrefresh" >

        </ImageView>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/llscroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="2dp"
        android:padding="5dp"
        android:background="#81DAF5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/header_stavisit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:text="Station Visit Form"
            android:textColor="#000000"
            android:textSize="14dp"
            android:textStyle="bold"
            android:fontFamily="@string/fontfamily"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:background="#B6B6B4"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activecolorex"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="top"
        android:orientation="horizontal">
    </LinearLayout>

    <!--Ques & Ans-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question"
            android:layout_weight="5"
            android:layout_marginLeft="25dp"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:textSize="14dp"
            android:textColor="#ffffff"
            android:fontFamily="@string/fontfamily"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer"
            android:layout_weight="5"
            android:layout_marginRight="25dp"
            android:layout_gravity="center|right"
            android:gravity="center|right"
            android:textSize="14dp"
            android:textColor="#ffffff"
            android:fontFamily="@string/fontfamily"/>

    </LinearLayout>

    <!--<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        android:layout_weight="1">-->

    <!-- <LinearLayout
        android:id="@+id/llscroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">-->

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            android:background="#ededed"
            android:visibility="visible">-->

            <ListView
                android:id="@+id/lstcsn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="#000000"
                android:divider="#B6B6B4"
                android:dividerHeight="0sp"
               /><!--        android:background="#ededed"-->

      <!--  </LinearLayout>-->

    <!--</LinearLayout>-->

    <!--</ScrollView>-->

        </LinearLayout>

    </ScrollView>

    <!--buttons-->
    <LinearLayout
        android:id="@+id/laybtns"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:layout_weight="0">

        <Button
            android:id="@+id/btnsave_stavisit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btn_pressed_glossy"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:text="Save"
            android:textSize="18dp"
            android:layout_weight="0.5"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:visibility="visible">

        </Button>

        <Button
            android:id="@+id/btncancel_stavisit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btn_pressed"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:text="Cancel"
            android:textSize="18dp"
            android:layout_weight="0.5"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:visibility="gone">

        </Button>

        <ImageView
            android:id="@+id/btncamera"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/ic_camera"
            android:layout_weight="0.75"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="2dp"
            android:visibility="gone">

        </ImageView>

    </LinearLayout>

</LinearLayout>