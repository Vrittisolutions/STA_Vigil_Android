<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/dialogboxcolor">

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5sp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Refresh Time(in Min)  :  "
            android:textColor="#111"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textSize="17dp"
            android:fontFamily="@string/fontfamily"/>

        <EditText
            android:id="@+id/edtime_setrefresh"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edittext_border"
            android:gravity="center_horizontal"
            android:hint="15"
            android:inputType="number"
            android:textColor="#000000"
            android:fontFamily="@string/fontfamily"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="5sp"
        android:padding="7dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#111111"
            android:text="Enable/Disable Unrelease Adv"
            android:layout_weight="1"
            android:fontFamily="@string/fontfamily"/>


       <android.support.v7.widget.SwitchCompat
           android:id="@+id/alarm_switch"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:theme="@style/SCBSwitch"
           android:layout_gravity="top"
           android:gravity="top"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_CSN"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="5sp"
        android:padding="7dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#111111"
            android:text="Enable/Disable Connection status"
            android:layout_weight="1"
            android:fontFamily="@string/fontfamily"/>


        <android.support.v7.widget.SwitchCompat
            android:id="@+id/alarm_switch_CSN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/SCBSwitch"
            android:layout_gravity="top"
            android:gravity="top"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_NonReportStation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="5sp"
        android:padding="7dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#111111"
            android:text="Enable/Disable Non Reported Stations"
            android:layout_weight="1"
            android:fontFamily="@string/fontfamily"/>


        <android.support.v7.widget.SwitchCompat
            android:id="@+id/alarm_switch_NonReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/SCBSwitch"
            android:layout_gravity="top"
            android:gravity="top"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       android:layout_margin="20dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <Button android:id="@+id/btnSave_setrfrsh"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btn_pressed_glossy"
            android:text="Save"
            android:textSize="18dp"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:fontFamily="@string/fontfamily"/>
    </LinearLayout>

</LinearLayout>