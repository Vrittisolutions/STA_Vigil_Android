<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/newborder"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:background="#0b6bb7"
        android:orientation="horizontal" >
        
          <ImageView
            android:id="@+id/siv1"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="3sp"
            android:background="@android:color/transparent"
            android:src="@drawable/sta_logo" />

        <TextView
            android:id="@+id/vWB"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/siv"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5sp"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:fontFamily="@string/fontfamily" >
        </TextView>
        
        <ImageView
            android:id="@+id/button_alert_add"
            android:layout_width="50sp"
            android:layout_height="40sp"
            android:padding="5dp"
            android:background="@android:color/transparent"
            android:src="@drawable/work_assign" >
        </ImageView>

        <ImageView
            android:id="@+id/button_filter"
            android:layout_width="60sp"
            android:layout_height="40sp"
            android:background="@android:color/transparent"
            android:src="@drawable/btnfilter"
            android:onClick="FilterClick"
            android:visibility="gone"
            />

        <ProgressBar
            android:id="@+id/progressinvent1"
            android:layout_width="50sp"
            android:layout_height="40sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/button_refresh_alert"
            android:layout_width="50sp"
            android:layout_height="40sp"
            android:background="@android:color/transparent"
            android:src="@drawable/btnrefresh" >
        </ImageView>
    </LinearLayout>
    
    <EditText android:id="@+id/edfitertext"
        android:layout_width="fill_parent"
        android:layout_height="30sp"
        android:layout_marginLeft="5sp"
        android:paddingLeft="5dp"
        android:layout_marginRight="5sp"
        android:background="@drawable/edback"  
        android:hint="Search here..." 
        android:textColor="#000000"
        android:visibility="gone"
        android:fontFamily="@string/fontfamily"/>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
      
        android:background="#81DAF5"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvalertlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Alert List"
            android:textColor="#000000"
            android:textSize="14dp"
            android:textStyle="bold"
            android:fontFamily="@string/fontfamily"
            android:padding="3dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

            <LinearLayout
                android:id="@+id/MyActivitylayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="8sp"
                    android:background="@drawable/announcement" />

                <TextView
                    android:id="@+id/tvsNamec"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.48"
                    android:paddingLeft="10sp"
                    android:text="My Activities"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:fontFamily="@string/fontfamily"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tvsmyCntc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="7sp"
                    android:text="0"
                    android:textColor="#ff0000"
                    android:textSize="15sp"
                    android:fontFamily="@string/fontfamily"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"/>

            </LinearLayout>

        <GridView
        android:id="@+id/listAlertitems"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#000000"
        android:layout_marginBottom="5dp"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:scrollingCache="false"
            android:numColumns="2"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
