<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="2dp"
    card_view:cardElevation="0.5dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:background="@drawable/listitemselector"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="0.5dp"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvinstallationidmain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_weight="5"
            android:text="InstallationId"
            android:textColor="#000000"
            android:textSize="13sp"
            android:fontFamily="@string/fontfamily" />

        <TextView
            android:id="@+id/tvservertimemain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:gravity="center|right"
            android:layout_weight="5"
            android:text="ServerTime"
            android:textSize="13sp"
            android:textColor="#FE2E2E"
            android:fontFamily="@string/fontfamily" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvreasonupdated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvservertimemain"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:text="abc"
        android:textSize="13sp"
        android:textColor="#726E6D"
        android:fontFamily="@string/fontfamily" />

    </LinearLayout>

    <!-- <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvreasonupdated"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp"
        android:background="#B6B6B4" /> -->

</android.support.v7.widget.CardView>