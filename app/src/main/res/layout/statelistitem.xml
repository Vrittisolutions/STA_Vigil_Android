<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="2dp"
    card_view:cardElevation="0.5dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/listitemselector"
        android:padding="0dp">

    <ImageView
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginLeft="3dp"
        android:layout_gravity="center"
        android:background="@drawable/announcement" />
        <!--android:layout_margin="2dp"
        android:layout_marginBottom="20sp"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingLeft="5sp"
            android:text="prtc"
            android:textColor="#000000"
            android:textSize="13sp"
            android:fontFamily="@string/fontfamily" />

        <TextView
            android:id="@+id/tvsCnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5sp"
            android:gravity="center_vertical|right"
            android:text="aa"
            android:textColor="#ff0000"
            android:textSize="13sp"
            android:fontFamily="@string/fontfamily" />

        <TextView
            android:id="@+id/tvsAdcnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvsName"
            android:layout_marginBottom="0sp"
            android:layout_marginTop="3sp"
            android:paddingBottom="4sp"
            android:paddingLeft="5sp"
            android:text="Non-Reported Ads : "
            android:textColor="#726E6D"
            android:textSize="10sp"
            android:fontFamily="@string/fontfamily"/>
    </RelativeLayout>

</LinearLayout>

</android.support.v7.widget.CardView>