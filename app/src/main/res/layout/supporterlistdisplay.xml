<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/newborder"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/headerColor"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:background="#0b6bb7"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/siv"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="3sp"
            android:background="@android:color/transparent"
            android:src="@drawable/sta_logo" />

        <TextView
            android:id="@+id/vWB"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/siv"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5sp"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="normal"
            android:fontFamily="@string/fontfamily" >
        </TextView>

        <ProgressBar
            android:id="@+id/progressBarsupenq_sub"
            android:layout_width="60sp"
            android:layout_height="40sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/button_refresh_sup_Enq_sub"
            android:layout_width="60sp"
            android:layout_height="40sp"
            android:background="@android:color/transparent"
            android:src="@drawable/btnrefresh" >

        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#81DAF5"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/namesubnet"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:text="Supporter Enquiry"
            android:textColor="#000000"
            android:textSize="14dp"
            android:textStyle="bold"
            android:padding="7dp"
            android:fontFamily="@string/fontfamily"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:background="#B6B6B4"
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="25dip"
        android:textColor="#ff4112"
        android:padding="4dip"
        android:text="Click And Hold Item For More Option"
        android:gravity="center"
        android:fontFamily="@string/fontfamily"
        android:visibility="gone" />

    <ListView
        android:id="@+id/lstsupenq_SUBNET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.15"
        android:cacheColorHint="#000000"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:scrollingCache="false"
        android:visibility="visible"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarFadeDuration="0"
        android:scrollbars="vertical" >

        <LinearLayout
            android:id="@+id/supenqlay_suppwise"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:visibility="visible">

            <!--connection status-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:background="@drawable/cardlayout_border"
                android:elevation="1dp">

                <LinearLayout
                    android:id="@+id/sup_connectionstatus"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:padding="3dp"
                    android:orientation="horizontal"
                    android:background="@drawable/listitemselector">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/connection_status" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_horizontal"
                            android:text="Connection Status"
                            android:textColor="#111"
                            android:textSize="15dp"
                            android:fontFamily="@string/fontfamily"/>

                        <TextView
                            android:id="@+id/tvcsnstatus"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center_horizontal"
                            android:text="Connected"
                            android:textColor="#FE2E2E"
                            android:textSize="16dp"
                            android:textStyle="normal"
                            android:fontFamily="@string/fontfamily"
                            android:visibility="gone"/>

                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="#B6B6B4"
                    android:visibility="gone"/>
            </LinearLayout>

            <!--tv status-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:background="@drawable/cardlayout_border"
                android:elevation="1dp">

                <LinearLayout
                    android:id="@+id/sup_tvstatus"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:padding="3dp"
                    android:orientation="horizontal"
                    android:background="@drawable/listitemselector">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/tvstatus" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_horizontal"
                            android:text="TV Status"
                            android:textColor="#111"
                            android:textSize="15dp"
                            android:fontFamily="@string/fontfamily"/>

                        <TextView
                            android:id="@+id/tvcsnstatuscnt"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="14dp"
                            android:text="0"
                            android:textColor="#FE2E2E"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:fontFamily="@string/fontfamily"
                            android:visibility="gone"/>

                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="#B6B6B4"
                    android:visibility="gone"/>
            </LinearLayout>

            <!--non reported adv-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/cardlayout_border"
                android:elevation="1dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/sup_nonrepeatedadadv"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"

                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:padding="3dp"
                    android:orientation="horizontal"
                    android:background="@drawable/listitemselector">
                    <!--android:onClick="leave"-->

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/nonreportedadvertisement" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp" >

                        <TextView
                            android:id="@+id/tvnonadv"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Non Reported Stations"
                            android:textColor="#111"
                            android:textSize="15dp"
                            android:fontFamily="@string/fontfamily"/>

                        <TextView
                            android:id="@+id/tvnonreportedstatusadv"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="14dp"
                            android:text="0"
                            android:textColor="#FE2E2E"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:fontFamily="@string/fontfamily"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/tvnonadv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvnonadv"
                            android:layout_marginTop="5sp"
                            android:text="vvv"
                            android:textColor="#726E6D"
                            android:textSize="14dp"
                            android:fontFamily="@string/fontfamily"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="#B6B6B4"
                    android:visibility="gone"/>
            </LinearLayout>

            <!--pdc clipwise pending clipwise-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:background="@drawable/cardlayout_border"
                android:elevation="1dp">

                <LinearLayout
                    android:id="@+id/sup_pendingclipsClipwise"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:padding="3dp"
                    android:orientation="horizontal"
                    android:background="@drawable/listitemselector">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/pendingclips" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp" >

                        <TextView
                            android:id="@+id/tvclip1"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="PDC Stations - Pending clips"
                            android:textColor="#111"
                            android:textSize="15dp"
                            android:fontFamily="@string/fontfamily"/>

                        <TextView
                            android:id="@+id/tvclipcount"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="14dp"
                            android:text="0"
                            android:textColor="#FE2E2E"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:fontFamily="@string/fontfamily"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/Stncount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvclip1"
                            android:layout_marginTop="5sp"
                            android:text="aaa"
                            android:textColor="#726E6D"
                            android:textSize="14dp"
                            android:fontFamily="@string/fontfamily"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="#B6B6B4"
                    android:visibility="gone"/>
            </LinearLayout>

            <!--alerts-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:background="@drawable/cardlayout_border"
                android:elevation="1dp">

                <LinearLayout
                    android:id="@+id/sup_alerts"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:padding="3dp"
                    android:orientation="horizontal"
                    android:background="@drawable/listitemselector">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/alertimg" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tvalertcounts"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="14dp"
                            android:layout_gravity="center_horizontal"
                            android:text="0"
                            android:textColor="#FE2E2E"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:fontFamily="@string/fontfamily"
                            android:visibility="gone"/>

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_horizontal"
                            android:text="Pending Alerts"
                            android:textColor="#111"
                            android:textSize="15dp"
                            android:fontFamily="@string/fontfamily"
                            android:id="@+id/textView"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="#B6B6B4"
                    android:visibility="gone"/>
            </LinearLayout>

            <!--work assign-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/cardlayout_border"
                android:elevation="1dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/sup_workassign"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:padding="3dp"
                    android:orientation="horizontal"
                    android:background="@drawable/listitemselector">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/workdone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_horizontal"
                            android:text="Pending Assigned Activities"
                            android:textColor="#111"
                            android:textSize="15dp"
                            android:fontFamily="@string/fontfamily"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="#B6B6B4"
                    android:visibility="gone"/>
            </LinearLayout>

            <!--dmc-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:background="@drawable/cardlayout_border"
                android:elevation="1dp">

                <LinearLayout
                    android:id="@+id/sup_dmc"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:padding="3dp"
                    android:orientation="horizontal"
                    android:background="@drawable/listitemselector">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/dmcertfcte1" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_horizontal"
                            android:text="Pending DM Certificates"
                            android:textColor="#111"
                            android:textSize="15dp"
                            android:fontFamily="@string/fontfamily"/>

                        <TextView
                            android:id="@+id/tvdmccounts"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="14dp"
                            android:layout_gravity="center_horizontal"
                            android:text="0"
                            android:textColor="#FE2E2E"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:fontFamily="@string/fontfamily"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="#B6B6B4"
                    android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>