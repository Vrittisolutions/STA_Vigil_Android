<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="2dp"
    card_view:cardElevation="0.5dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true"
    tools:context="com.adapters.DT_StationList_Adapter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="3sp"
        android:paddingBottom="3sp"
        android:background="#ededed">

        <LinearLayout
            android:id="@+id/lynwname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtnwametitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Network Code :"
                android:textColor="#111"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_weight="6"
                android:fontFamily="@string/fontfamily"/>

            <TextView
                android:id="@+id/txtntwrkname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#111"
                android:textSize="15dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="4"
                android:fontFamily="@string/fontfamily"/>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="#B6B6B4"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/lyname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:padding="2dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtsnametitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Station Name :"
                android:textColor="#111"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_weight="6"
                android:fontFamily="@string/fontfamily"/>

            <TextView
                android:id="@+id/txtstationname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#111"
                android:textSize="15dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="4"
                android:fontFamily="@string/fontfamily"/>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="#B6B6B4"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/lydate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:padding="2dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtdatetitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:text="Date :"
                android:textStyle="bold"
                android:textColor="#111"
                android:textSize="15dp"
                android:visibility="visible"
                android:fontFamily="@string/fontfamily"/>

            <TextView
                android:id="@+id/txtdate1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="#111"
                android:textSize="15dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="4"
                android:fontFamily="@string/fontfamily"/>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="#B6B6B4"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/lytime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:padding="2dp">

            <TextView
                android:id="@+id/txtectitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Early Close Time :"
                android:textColor="#111"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_weight="6"
                android:visibility="gone"
                android:fontFamily="@string/fontfamily"/>

            <TextView
                android:id="@+id/txtdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="#111"
                android:textSize="13sp"
                android:layout_marginLeft="3dp"
                android:layout_weight="4"
                android:fontFamily="@string/fontfamily"/>

            <TextView
                android:id="@+id/txtectime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EC close time"
                android:textColor="#111"
                android:textSize="13sp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center|right"
                android:gravity="center|right"
                android:layout_weight="4"
                android:fontFamily="@string/fontfamily"/>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="#B6B6B4"
            android:visibility="gone"/>

    </LinearLayout>

</android.support.v7.widget.CardView>