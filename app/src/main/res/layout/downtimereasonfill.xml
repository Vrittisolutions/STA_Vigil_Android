<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/newborder"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/headerColor"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:background="#0b4bb7"
        android:gravity="top"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/headerColor1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.7"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/sta_logo" />

            <TextView
                android:id="@+id/vWB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:text="@string/app_name"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="normal"
                android:fontFamily="@string/fontfamily">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.3"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/button_menu"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="menu"
                android:paddingRight="5dp"
                android:src="@drawable/menu"
                android:visibility="invisible" >
            </ImageView>

            <ProgressBar
                android:id="@+id/progressinvent1"
                android:layout_width="50sp"
                android:layout_height="40sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/button_refresh_downtime_reason_fill"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:padding="7dp"
                android:background="@android:color/transparent"
                android:paddingLeft="0dp"
                android:src="@drawable/refresh" >
            </ImageView>
        </LinearLayout>
    </LinearLayout>

    	
	<LinearLayout
        android:layout_width="fill_parent"
		android:id="@+id/activecolorex"
        android:layout_height="wrap_content"
		android:orientation="horizontal"
        android:gravity="top"
		android:background="#ffffff">

	</LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="#81DAF5"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

      
            <TextView
                android:id="@+id/tvdowntimereasonfillsstnname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text=""
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="14dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@string/fontfamily"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#B4B4B4" />
    </LinearLayout>

   <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                     android:padding="5dp"
                    android:orientation="vertical" >

         <EditText
                     android:id="@+id/edReason"
                     android:layout_marginLeft="5dp"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:hint="Fill Reason" 
                     android:textSize="15dp"
                     android:textColor="#000000"
                     android:onClick="ReasonList"
                     android:maxLines="4"
                     android:padding="5dp"
                     android:paddingLeft="5dp"
                     android:layout_weight="5"
                     android:background="@drawable/edittext_border"
                     android:fontFamily="@string/fontfamily">
                    
                 </EditText>

                    <Spinner
                        android:id="@+id/spinnerreasonfill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:prompt="@string/promt_project"
                        android:background="@drawable/selectorsp"
                        android:layout_weight="5"
                        android:padding="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:spinnerMode="dialog"
                        android:fontFamily="@string/fontfamily"></Spinner>

                </LinearLayout>
                
      <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="10dp"
          android:paddingBottom="5dp"
          android:padding="5dp"
          android:layout_margin="5dp"
        android:orientation="vertical"
          android:background="#ededed">

                 <TextView
                android:id="@+id/tvdowntimereasonfilldate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="no Info"
                android:textColor="#000000"
                android:textSize="14dp"
                     android:fontFamily="@string/fontfamily"/>
       
   
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvdowntimereasonfromfill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="no Info"
                android:textColor="#000000"
                android:textSize="14dp"
                android:fontFamily="@string/fontfamily" />

            <TextView
                android:id="@+id/tvdowntimeseven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="5dp"
                android:text="to"
                android:textColor="#000000"
                android:textSize="14dp"
                android:fontFamily="@string/fontfamily" />
              
              <TextView
                android:id="@+id/tvdowntimereasontofill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:text="no Info"
                android:textColor="#000000"
                android:textSize="14dp"
                  android:fontFamily="@string/fontfamily" />

        </LinearLayout>
       </LinearLayout>
   
 <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btndwontimereasonsave"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:text="Update"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:textAllCaps="false"
                    android:background="@drawable/btn_pressed_glossy"
                    android:fontFamily="@string/fontfamily"/>

                <Button
                    android:id="@+id/btndowntimereasoncancel"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@string/fontfamily"
                    android:background="@drawable/btn_pressed_glossy"
                    android:text="Cancel"
                    android:textColor="#fff"
                    android:textAllCaps="false"
                    android:textSize="16dp" />

            </LinearLayout>

</LinearLayout>