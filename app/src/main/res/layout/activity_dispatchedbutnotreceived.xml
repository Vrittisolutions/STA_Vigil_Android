<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newborder"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/headerColor"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:background="#0b6bb7"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/siv"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="3sp"
            android:background="@android:color/transparent"
            android:src="@drawable/sta_logo" />

        <TextView
            android:id="@+id/vWB"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/siv"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5sp"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="normal"
            android:fontFamily="@string/fontfamily" >
        </TextView>

        <ImageView
            android:id="@+id/filter_disp_notrcvd_ord"
            android:layout_width="60sp"
            android:layout_height="40sp"
            android:background="@android:color/transparent"
            android:src="@drawable/btnfilter"></ImageView>

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="60sp"
            android:layout_height="40sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/button_refresh_notreceived"
            android:layout_width="60sp"
            android:layout_height="40sp"
            android:background="@android:color/transparent"
            android:src="@drawable/btnrefresh" >

    </ImageView>

    </LinearLayout>

    <EditText android:id="@+id/edfiter_dispnotrcvdtext"
        android:layout_width="fill_parent"
        android:layout_height="30sp"
        android:layout_marginLeft="5sp"
        android:paddingLeft="10sp"
        android:layout_marginRight="5sp"
        android:textSize="14dp"
        android:fontFamily="@string/fontfamily"
        android:background="@drawable/edback"
        android:hint="Search here..."
        android:textColor="#000000"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="2dp"
        android:background="#81DAF5"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/materialreq_name_notreceived"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:padding="5dp"
            android:text="Materials Dispatched But Not received List"
            android:textColor="#000000"
            android:textSize="14dp"
            android:textStyle="bold"
            android:fontFamily="@string/fontfamily"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:background="#dcdcdc"
        android:paddingTop="3dp"
        android:paddingBottom="3dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2dp"
            android:text="Material"
            android:textSize="13dp"
            android:layout_weight="0.25"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:textColor="#000000"
            android:fontFamily="@string/fontfamily"
            android:layout_gravity="left"
            android:gravity="left"/>

        <TextView
            android:id="@+id/txtstation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="For Station"
            android:textSize="13dp"
            android:layout_weight="0.25"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:textColor="#000000"
            android:fontFamily="@string/fontfamily"
            android:layout_gravity="left"
            android:gravity="left"/>

        <TextView
            android:id="@+id/txtreqby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="By Supporter"
            android:textSize="13dp"
            android:textColor="#111"
            android:layout_weight="0.25"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:fontFamily="@string/fontfamily"
            android:layout_gravity="left"
            android:gravity="left"/>

        <TextView
            android:id="@+id/txtnetwrk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:text="For NW"
            android:textSize="13dp"
            android:textColor="#111"
            android:layout_weight="0.3"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:fontFamily="@string/fontfamily"
            android:layout_gravity="right"
            android:gravity="right"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/materialreq_notreceived"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#000000"
            android:dividerHeight="0dp"
            android:divider="@null"
            android:scrollingCache="false" />

    </LinearLayout>

</LinearLayout>