<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    card_view:cardElevation="0.5dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp"
        android:background="@drawable/listitemselector"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

    <ImageView
        android:layout_width="28sp"
        android:layout_height="28sp"
        android:layout_marginLeft="5sp"
        android:background="@drawable/announcement"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/tvsNamec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@string/fontfamily"
            android:gravity="center_vertical"
            android:paddingLeft="5sp"
            android:text="KSRTC"
            android:textColor="#000000"
            android:textSize="13sp" />
        <!--android:layout_marginTop="15sp"-->

    <TextView
        android:id="@+id/tvsCntc"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5sp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical|right"
        android:gravity="center_vertical|right"
        android:text="189/167"
        android:textColor="#ff0000"
        android:textSize="13sp"
        android:fontFamily="@string/fontfamily"/>
        <!-- android:layout_marginTop="15sp"-->

    </LinearLayout>

</android.support.v7.widget.CardView>