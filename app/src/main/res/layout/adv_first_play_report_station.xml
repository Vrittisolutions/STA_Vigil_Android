<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    card_view:cardElevation="0.5dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="1dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/txtfilename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="33733"
                android:textStyle="bold"
                android:textSize="14dp"
                android:textColor="#0D47A1"
                android:layout_weight="0.7"/>

            <TextView
                android:id="@+id/txtstnname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chikodi"
                android:textSize="14dp"
                android:textColor="#111"
                android:textStyle="bold"
                android:layout_weight="0.6"/>

            <TextView
                android:id="@+id/txtisdwnld"
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:layout_gravity="right"
                android:layout_weight="0.7"
                android:gravity="right"
                android:text="Yes"
                android:textColor="#00AA00"
                android:textStyle="bold"
                android:textSize="14dp"
                android:paddingRight="5dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="1dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Schedule Time :"
                android:textSize="13sp"
                android:layout_weight="0.69"
                android:layout_gravity="left"
                android:gravity="left"/>

            <TextView
                android:id="@+id/txtschdltime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scheduled Time"
                android:textSize="13sp"
                android:textColor="#111"
                android:layout_weight="0.32"
                android:layout_gravity="left"
                android:gravity="left"
                android:paddingLeft="0dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="1dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="First Play Time : "
                android:textSize="13sp"
                android:layout_weight="0.7"
                android:layout_gravity="left"
                android:gravity="left"/>

            <TextView
                android:id="@+id/txtplaytime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Play Time"
                android:textSize="13sp"
                android:textColor="#111"
                android:layout_weight="0.3"
                android:layout_gravity="left"
                android:gravity="left"
                android:paddingLeft="5dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="1dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remark : "
                android:textSize="13sp"
                android:layout_weight="0.7"/>

            <TextView
                android:id="@+id/txtremark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Record downloaded successfully"
                android:textSize="13sp"
                android:layout_weight="0.3"
                android:paddingLeft="5dp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>