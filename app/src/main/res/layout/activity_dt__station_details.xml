<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newborder"
    android:orientation="vertical"
    tools:context=".DT_StationDetails">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:background="#0b6bb7"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/siv1"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="3sp"
            android:background="@android:color/transparent"
            android:src="@drawable/sta_logo" />

        <TextView
            android:id="@+id/vWB"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/siv"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5sp"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="normal"
            android:typeface="serif" >

        </TextView>

        <ProgressBar
            android:id="@+id/progressinvent1"
            android:layout_width="50sp"
            android:layout_height="40sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/button_refresh_station"
            android:layout_width="50sp"
            android:layout_height="40sp"
            android:background="@android:color/transparent"
            android:src="@drawable/btnrefresh">

        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#81DAF5"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvheader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:padding="7dp"
            android:text="Station Details"
            android:textColor="#000000"
            android:textSize="15dp"
            android:fontFamily="@string/fontfamily"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/lynwname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:id="@+id/txtnwametitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Network Code :"
                android:textColor="#111"
                android:textStyle="bold"
                android:textSize="15dp"
                android:fontFamily="@string/fontfamily"
                android:layout_weight="6"/>

            <TextView
                android:id="@+id/txtntwrkname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#111"
                android:textSize="15dp"
                android:layout_marginLeft="3dp"
                android:fontFamily="@string/fontfamily"
                android:layout_weight="4"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:padding="3dp">

            <TextView
                android:id="@+id/txtsnametitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Station Name :"
                android:textColor="#111"
                android:textStyle="bold"
                android:textSize="15dp"
                android:fontFamily="@string/fontfamily"
                android:layout_weight="6"/>

            <TextView
                android:id="@+id/txtstationname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#111"
                android:textSize="15dp"
                android:fontFamily="@string/fontfamily"
                android:layout_marginLeft="3dp"
                android:layout_weight="4"/>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="#B6B6B4" />

        <LinearLayout
            android:id="@+id/lydate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:padding="3dp">

            <TextView
                android:id="@+id/txtdatetitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:text="Date :"
                android:textStyle="bold"
                android:textColor="#111"
                android:textSize="15dp"
                android:fontFamily="@string/fontfamily"/>

            <TextView
                android:id="@+id/txtdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#111"
                android:textSize="15dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="4"
                android:fontFamily="@string/fontfamily"/>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="#B6B6B4" />

        <LinearLayout
            android:id="@+id/lytime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:padding="3dp">

            <TextView
                android:id="@+id/txtectitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Early Close Time :"
                android:textColor="#111"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_weight="6"
                android:fontFamily="@string/fontfamily"/>

            <TextView
                android:id="@+id/txtectime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#111"
                android:textSize="15dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="4"
                android:fontFamily="@string/fontfamily"/>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="#B6B6B4" />

        <!--<LinearLayout
            android:id="@+id/lytime2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:padding="3dp">

            <TextView
                android:id="@+id/txtlstitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Late Start Time :"
                android:textColor="#111"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_weight="6"/>

            <TextView
                android:id="@+id/txtlstime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LS Time"
                android:textColor="#111"
                android:textSize="15dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="4"/>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="#B6B6B4" />-->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nwstation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/txtxnwname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Network - "
            android:textSize="17dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:fontFamily="@string/fontfamily"/>

        <TextView
            android:id="@+id/txtxstnname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Station"
            android:textSize="17dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:fontFamily="@string/fontfamily"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/eclstitlestrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#dcdcdc"
        android:padding="3dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25dp"
            android:layout_weight="5"
            android:gravity="center|left"
            android:text="Date"
            android:textSize="13dp"
            android:fontFamily="@string/fontfamily"/>

        <TextView
            android:id="@+id/txteclstime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Early Close Time"
            android:textSize="13dp"
            android:layout_weight="5"
            android:layout_marginRight="15dp"
            android:layout_gravity="right"
            android:gravity="center|right"
            android:fontFamily="@string/fontfamily"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dtinstancetitlestrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dcdcdc"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="5"
            android:gravity="center"
            android:text="Date"
            android:textSize="13dp"
            android:fontFamily="@string/fontfamily"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:gravity="center"
            android:text="Down Time"
            android:textSize="13dp"
            android:fontFamily="@string/fontfamily"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:gravity="center"
            android:text="Start Time"
            android:textSize="13dp"
            android:fontFamily="@string/fontfamily"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:gravity="center"
            android:text="End Time"
            android:textSize="13dp"
            android:fontFamily="@string/fontfamily"/>

    </LinearLayout>

    <ListView
        android:id="@+id/lsectimelist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <!--android:divider="@color/listviewdivider"-->

    </ListView>

</LinearLayout>