<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    card_view:cardBackgroundColor="@android:color/transparent"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="1dp"
    card_view:cardElevation="0.5dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="1dp"
        android:paddingTop="1dp"
        android:orientation="horizontal"
        android:background="#ffffff">

        <LinearLayout
            android:id="@+id/lvtitle_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_weight="0.5"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvstnnamedownmain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="s name"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold"
                android:fontFamily="@string/fontfamily" />

            <TextView
                android:id="@+id/txtlastcalibrationtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Last Calibration time"
                android:textColor="#000000"
                android:textSize="13sp"
                android:fontFamily="@string/fontfamily" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_weight="0.5"
            android:layout_gravity="right"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtlastconnectiondatetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Connection date time"
                android:layout_gravity="right"
                android:textColor="#000000"
                android:textSize="14dp"
                android:fontFamily="@string/fontfamily" />

            <TextView
                android:id="@+id/txtlastfivecalibration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="last calibration"
                android:layout_gravity="right"
                android:textColor="#000000"
                android:textSize="13sp"
                android:fontFamily="@string/fontfamily" />
        </LinearLayout>

        
    </LinearLayout>

</android.support.v7.widget.CardView>