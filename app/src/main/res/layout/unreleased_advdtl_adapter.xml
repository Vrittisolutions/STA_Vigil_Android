<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    card_view:cardElevation="0.5dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2sp"
            android:layout_weight="0.15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/announcement"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/txtadvcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Adv Code"
                    android:textSize="13sp"
                    android:textColor="#0D47A1"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="center_vertical|left"
                    android:layout_weight="0.55"/>

                <TextView
                    android:id="@+id/txtsono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SoNumber"
                    android:textSize="13sp"
                    android:textColor="#111"
                    android:layout_weight="0.45"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/txtnetwork"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Network"
                    android:textSize="13sp"
                    android:textColor="#111"
                    android:textStyle="bold"
                    android:layout_weight="0.5"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"/>

            </LinearLayout>

            <TextView
                android:id="@+id/txtadvdesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adv Desc."
                android:textSize="13sp"
                android:textColor="#0D47A1"
                android:textStyle="normal"
                android:maxLines="3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0.5"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Release Date : "
                        android:textSize="11sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/txtsopreldate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="SOPReleaseDate"
                        android:textColor="#111"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0.5"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Approve Date : "
                        android:textSize="11sp"
                        android:textStyle="normal"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical|right"
                        android:gravity="center_vertical|right"/>

                    <TextView
                        android:id="@+id/txtapprdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Appr. Date"
                        android:textSize="12sp"
                        android:textColor="#111"
                        android:textStyle="normal"
                        android:layout_gravity="center_vertical|right"
                        android:gravity="center_vertical|right"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imgplay"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_weight="0.85"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>
        <!--android:src="@drawable/playclip"-->

    </LinearLayout>

</android.support.v7.widget.CardView>