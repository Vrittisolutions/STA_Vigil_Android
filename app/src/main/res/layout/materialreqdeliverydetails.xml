<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/newborder">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_margin="5dp">

    <LinearLayout
        android:id="@+id/headerColor"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:background="#0b6bb7"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/siv"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="3sp"
            android:background="@android:color/transparent"
            android:src="@drawable/sta_logo" />

        <TextView
            android:id="@+id/vWB"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/siv"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5sp"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="normal"
           android:fontFamily="@string/fontfamily"></TextView>

      

<!--         <ImageView -->
<!--             android:id="@+id/button_refresh_connection" -->
<!--             android:layout_width="60sp" -->
<!--             android:layout_height="40sp" -->
<!--             android:background="@android:color/transparent" -->
<!--             android:src="@drawable/btnrefresh" /> -->
          <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="60sp"
            android:layout_height="40sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#81DAF5"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:text="Material name for station"
            android:textSize="14dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:fontFamily="@string/fontfamily" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:background="#ededed">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_weight="0.5"
                android:textColor="#111"
                android:text="Approve Category"
                android:fontFamily="@string/fontfamily" />

            <TextView
                android:id="@+id/txtapprcatogery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="0.3"
                android:text="Approve Category"
                android:textColor="#111"
                android:textStyle="bold"
                android:textSize="15sp"
                android:fontFamily="@string/fontfamily" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/headerColor1"
            android:layout_width="fill_parent"
            android:layout_height="40sp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtmode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.6"
                android:text="Mode of courier"
                android:textColor="#111"
                android:fontFamily="@string/fontfamily" />

            <Spinner
                android:id="@+id/spinnertypeofcurier"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.3"
                android:background="@drawable/edittext_border"
                android:entries="@array/modearray"
                android:prompt="@string/Couriermode"
                android:spinnerMode="dropdown"
                android:fontFamily="@string/fontfamily"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/headerColor3"
            android:layout_width="fill_parent"
            android:layout_height="40sp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtRequesterName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_weight="0.63"
                android:text="Docket No"
                android:textColor="#111"
                android:fontFamily="@string/fontfamily" />

            <EditText
                android:id="@+id/editTextDocateNo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.3"
                android:background="@drawable/edittext_border"
                android:ems="10"
                android:hint="Enter docket number"
                android:padding="10dp"
                android:textSize="15dp"
                android:fontFamily="@string/fontfamily">
                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_weight="0.6"
                android:text="Date"
                android:textColor="#111"
                android:fontFamily="@string/fontfamily" />

            <Button
                android:id="@+id/btnDatepicker"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.3"
                android:background="@drawable/btn_pressed_glossy"
                android:text="Select Date"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:fontFamily="@string/fontfamily"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/txtselect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_weight="0.6"
                android:layout_gravity="center"
                android:text="Take image from "
                android:textColor="#111"
                android:fontFamily="@string/fontfamily" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.3"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/btncamera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/backshape"
                    android:src="@drawable/camera"
                    android:padding="2dp"
                    android:layout_marginRight="30dp"/>

                <ImageButton
                    android:id="@+id/btnfolder"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/backshape"
                    android:padding="6dp"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/folder" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imgMaterial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.57"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <Button
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="0.5"
                android:background="@drawable/btn_pressed_glossy"
                android:text="Save"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:fontFamily="@string/fontfamily"/>

            <Button
                android:id="@+id/btn_return"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="0.5"
                android:background="@drawable/btn_pressed_glossy"
                android:text="Return"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:fontFamily="@string/fontfamily"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>


</ScrollView>