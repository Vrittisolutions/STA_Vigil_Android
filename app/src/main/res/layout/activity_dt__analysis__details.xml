<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newborder"
    android:orientation="vertical"
    tools:context=".DT_Analysis_Details">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:background="#0b6bb7"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/siv1"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="3sp"
            android:background="@android:color/transparent"
            android:src="@drawable/sta_logo" />

        <TextView
            android:id="@+id/vWB"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/siv"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5sp"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="normal"
            android:fontFamily="@string/fontfamily" >
        </TextView>

        <ProgressBar
            android:id="@+id/progressinvent1"
            android:layout_width="50sp"
            android:layout_height="40sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/button_refresh_alert"
            android:layout_width="50sp"
            android:layout_height="40sp"
            android:background="@android:color/transparent"
            android:src="@drawable/btnrefresh">

        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#81DAF5"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvheader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:padding="7dp"
            android:text="Down Time Analysis Details"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:fontFamily="@string/fontfamily"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/dt_latestart_layout"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:paddingLeft="5dp"
                android:background="@drawable/cardlayout2_border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.7"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtlatestart"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="3dp"
                            android:gravity="center_vertical"
                            android:text="Late Start"
                            android:textColor="#726E6D"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:fontFamily="@string/fontfamily"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_LS_count"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.3"
                        android:gravity="center|right"
                        android:layout_gravity="center|right"
                        android:paddingRight="15dp"
                        android:text="0"
                        android:textColor="#FE2E2E"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:fontFamily="@string/fontfamily"
                        android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="#B6B6B4"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/dt_earlyclose_layout"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:weightSum="1"
                android:paddingLeft="5dp"
                android:background="@drawable/cardlayout2_border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtearlyclose"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:text="Early Close"
                        android:textColor="#726E6D"
                        android:gravity="center_vertical"
                        android:textSize="16dp"
                        android:layout_marginLeft="3dp"
                        android:textStyle="bold"
                        android:fontFamily="@string/fontfamily"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_EC_count"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"
                    android:gravity="center|right"
                    android:layout_gravity="center|right"
                    android:paddingRight="15dp"
                    android:text="0"
                    android:textColor="#FE2E2E"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:fontFamily="@string/fontfamily"
                    android:visibility="visible" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="#B6B6B4"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/dt_instance_layout"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="8dp"
                android:paddingLeft="5dp"
                android:background="@drawable/cardlayout2_border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtdtinstance"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="3dp"
                        android:gravity="center_vertical"
                        android:text="Down Time Instance"
                        android:textColor="#726E6D"
                        android:textSize="16dp"
                        android:fontFamily="@string/fontfamily"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtdtinstcnt"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"
                    android:gravity="center|right"
                    android:layout_gravity="center|right"
                    android:paddingRight="15dp"
                    android:text="0"
                    android:textColor="#FE2E2E"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:fontFamily="@string/fontfamily"
                    android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="#B6B6B4"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/dt_hours_layout"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:weightSum="1"
                android:paddingLeft="5dp"
                android:background="@drawable/cardlayout2_border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtdthours"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:text="Down Time Hours"
                        android:textColor="#726E6D"
                        android:gravity="center_vertical"
                        android:textSize="16dp"
                        android:layout_marginLeft="3dp"
                        android:fontFamily="@string/fontfamily"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtdthrcnt"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"
                    android:gravity="center|right"
                    android:layout_gravity="center|right"
                    android:paddingRight="15dp"
                    android:text="0"
                    android:textColor="#FE2E2E"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:fontFamily="@string/fontfamily"
                    android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="#B6B6B4"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>