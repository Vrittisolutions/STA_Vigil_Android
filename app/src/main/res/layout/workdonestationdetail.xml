<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/newborder">

    <LinearLayout
        android:id="@+id/headerColor"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:background="#0b6bb7"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/siv"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="3sp"
            android:background="@android:color/transparent"
            android:src="@drawable/sta_logo" />

        <TextView
            android:id="@+id/vWB"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/siv"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5sp"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:fontFamily="@string/fontfamily" />

        <ProgressBar
            android:id="@+id/progressBarwrkStn"
            android:layout_width="60sp"
            android:layout_height="40sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#81DAF5"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/workdoneStation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:text="Work Done - "
            android:textColor="#000000"
            android:textSize="14dp"
            android:textStyle="bold"
            android:fontFamily="@string/fontfamily"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:background="#B6B6B4"
            android:visibility="gone"/>
    </LinearLayout>

     <Button
        android:id="@+id/datebtn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:background="@drawable/edittext_border"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="03-May-2016 05:03 AM"
        android:textColor="#1E347F"
        android:textSize="15dp"
         android:fontFamily="@string/fontfamily"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10" >

        <EditText
            android:id="@+id/editTexts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:editable="false"
            android:hint="Find Activity From Timsheet"
            android:layout_weight="8"
            android:fontFamily="@string/fontfamily"
            android:textColor="#fff">
        </EditText>

        <ImageView
            android:id="@+id/imageButton11"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginRight="10dp"
            android:src="@drawable/delete"
             android:layout_weight="2"
              />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarFadeDuration="0"
        android:scrollbars="vertical" >

        <LinearLayout
            android:id="@+id/linWork2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="10dp"
                android:background="#81DAF5"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/radio_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:clickable="true"
                    android:onClick="onRadioButtonWork"
                    android:src="@drawable/workdown" />

                <TextView
                    android:id="@+id/btn4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Fill Work Done"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="normal"
                    android:fontFamily="@string/fontfamily"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linWork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_border"
                android:orientation="vertical"
                android:visibility="gone">

               <!--  <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/editText"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:editable="false"
                        android:hint="Select Date" >
                    </EditText>

                    <ImageView
                        android:id="@+id/imageButton1"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="5sp"
                        android:cropToPadding="true"
                        android:src="@drawable/calendericon" />
                </LinearLayout> -->

                <EditText
                    android:id="@+id/txtTextwork"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5sp"
                    android:editable="false"
                    android:textSize="15dp"
                    android:fontFamily="@string/fontfamily"
                    android:hint="Select Work Type" >

                </EditText>

                <EditText
                    android:id="@+id/txtText1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5sp"
                    android:fontFamily="@string/fontfamily"
                    android:textSize="15dp"
                    android:hint="Remark" >

                </EditText>

                <LinearLayout android:layout_width="fill_parent"
                    android:id="@+id/camll"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:weightSum="24">


                    <EditText
                        android:layout_weight="16"
                        android:id="@+id/editTextpath"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:textColorHint="@android:color/darker_gray"
                        android:gravity="left|center"
                        android:hint="Path"
                        android:fontFamily="@string/fontfamily"
                        android:editable="false"
                        android:focusable="false"
                        android:clickable="false"
                        android:inputType="text"
                        android:textSize="15dp"
                        android:layout_marginRight="3dp"
                        android:textColor="#000" >
                    </EditText>
                    <ImageButton
                        android:layout_weight="4"
                        android:id="@+id/btngallery"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_gallery_pics"
                        android:background="@drawable/edittext_border"
                        android:padding="15dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="3dp">

                    </ImageButton>
                    <ImageButton
                        android:layout_weight="4"
                        android:id="@+id/btncam"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_cam_small"
                        android:background="@drawable/edittext_border"
                        android:padding="5dp"
                        android:layout_marginLeft="2dp">

                    </ImageButton>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linWork1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#81DAF5"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/radioMaterial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:clickable="true"
                    android:onClick="onRadioButtonMaterial"
                    android:src="@drawable/workdown" />

                <TextView
                    android:id="@+id/btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Fill Material"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="normal"
                    android:fontFamily="@string/fontfamily"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linMAterial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_border"
                android:orientation="vertical"
                android:visibility="gone" >
<!-- 
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/editTextmat"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:editable="false"
                        android:hint="Select Date" >
                    </EditText>

                    <ImageView
                        android:id="@+id/imageButton1mat"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="5sp"
                        android:cropToPadding="true"
                        android:src="@drawable/calendericon" /> 
                </LinearLayout>-->

                <EditText
                    android:id="@+id/txtTextmat"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5sp"
                    android:editable="false"
                    android:fontFamily="@string/fontfamily"
                    android:textSize="15dp"
                    android:hint="Select material" >
                </EditText>

                <EditText
                    android:id="@+id/txtText1mat"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5sp"
                    android:hint="Remark"
                    android:textSize="15dp"
                    android:fontFamily="@string/fontfamily">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="1" >

                <Button
                    android:id="@+id/worksave"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight=".5"
                    android:background="@drawable/btn_pressed_glossy"
                    android:text="Save"
                    android:textColor="#ffffff"
                    android:textStyle="normal"
                    android:textSize="18dp"
                    android:fontFamily="@string/fontfamily"/>

                <Button
                    android:id="@+id/workcancle"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight=".5"
                    android:background="@drawable/btn_pressed_glossy"
                    android:text="Cancel"
                    android:textSize="18dp"
                    android:fontFamily="@string/fontfamily"
                    android:textColor="#ffffff"
                    android:textStyle="normal" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>