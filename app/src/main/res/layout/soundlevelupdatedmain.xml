<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    card_view:cardElevation="0.5dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/listitemselector"
        android:padding="1dp">

    <LinearLayout android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:orientation="horizontal">

           <TextView  android:id="@+id/tvstnnamesoundlevel" 
                 android:layout_width="wrap_content"
                 android:layout_weight="1"
                 android:layout_height="wrap_content"
                 android:textSize="13sp"
                 android:paddingTop="1sp"
                 android:typeface="serif"
                 android:paddingBottom="1sp"
                 android:paddingLeft="5sp"
                 android:gravity="center_vertical"
                 android:textColor="#000000"
                 android:text="KSRTC"
                 android:fontFamily="@string/fontfamily"/>

    <ImageView android:id="@+id/imgTV"
        android:layout_width="20sp" 
        android:layout_height="20sp"
        android:layout_gravity="center_vertical"/>
    
    <ImageView android:id="@+id/imgTV1"
        android:layout_width="20sp" 
        android:layout_height="20sp"
        
            
        android:layout_gravity="center_vertical"/>

    <ImageView android:id="@+id/imgTV2"
        android:layout_width="20sp" 
        android:layout_height="20sp"
      
            
        android:layout_gravity="center_vertical"/>

    <ImageView android:id="@+id/imgTV3"
        android:layout_width="20sp" 
        android:layout_height="20sp"
          android:layout_gravity="center_vertical"/>

    <ImageView android:id="@+id/imgTV4"
        android:layout_width="20sp" 
        android:layout_height="20sp"
       
        android:layout_gravity="center_vertical"/>

    <ImageView android:id="@+id/imgTV5"
        android:layout_width="20sp" 
        android:layout_height="20sp"
       
        android:layout_gravity="center_vertical"/>

    <ImageView android:id="@+id/imgTV6"
        android:layout_width="20sp" 
        android:layout_height="20sp"
     
        android:layout_gravity="center_vertical"/>

    <ImageView android:id="@+id/imgTV7"
        android:layout_width="20sp" 
        android:layout_height="20sp"
       
        android:layout_gravity="center_vertical"/>

</LinearLayout>

     <TextView
            android:layout_marginLeft="0dp"
            android:id="@+id/tvreasonupdated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5sp"
            android:text="aasssssssssss"
            android:textColor="#726E6D"
         android:textSize="11sp"
            android:fontFamily="@string/fontfamily" />

    </LinearLayout>

</android.support.v7.widget.CardView>